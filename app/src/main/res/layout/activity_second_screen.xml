<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background_gradient">

    <TextView
        android:id="@+id/tvcya"
        android:layout_width="125dp"
        android:layout_height="53dp"
        android:text="Create Your Account"
        android:layout_marginTop="15sp"
        android:layout_marginStart="15sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp" />
    <ImageView
        android:layout_width="match_parent"
        android:translationY="100dp"
        android:layout_height="600dp"
        android:layout_below="@+id/tvcya"
        android:src="@drawable/white_bg"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="200dp"
            android:layout_marginStart="50sp"
        />
        <EditText
            android:id="@+id/etentername"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Enter Full Name"
            android:inputType="textPersonName"
            android:layout_below="@id/tvFullName"
            android:layout_marginStart="50dp"


        />
        <TextView
            android:id="@+id/tvphone"
            android:layout_below="@id/etentername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone or Email"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50sp"
            />
        <EditText
            android:id="@+id/etphone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Enter Phone or Email"
            android:inputType="textEmailAddress"
            android:layout_below="@id/tvphone"
            android:layout_marginStart="50dp"
            />
        <TextView
            android:id="@+id/tvpassword"
            android:layout_below="@id/etphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50sp"
            />
        <EditText
            android:id="@+id/etpassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:paddingRight="150dp"
            android:layout_below="@id/tvpassword"
            android:layout_marginStart="50dp"
            android:inputType="textPassword"
        />
        <TextView
            android:id="@+id/tvconfirmpass"
            android:layout_below="@id/etpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50sp"
            />
        <EditText
            android:id="@+id/etconfirmpass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:layout_below="@id/tvconfirmpass"
            android:layout_marginStart="50dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btsignUp"

            android:background="@drawable/button_gradientstyle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Sign Up"
            android:textSize="20sp"
            android:layout_below="@+id/etconfirmpass"
            android:textColorHint="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="65dp"
        />
        <TextView
            android:id="@+id/tvdha"
            android:layout_width="wrap_content"
            android:layout_below="@id/btsignUp"
            android:layout_marginTop="30sp"
            android:layout_marginStart="200sp"
            android:textColorHint="@color/black"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:hint="Already Signed Up?"

        />
        <TextView
            android:id="@+id/tvsigin"
            android:layout_width="wrap_content"
            android:layout_below="@id/tvdha"
            android:layout_marginTop="10sp"
            android:layout_marginStart="280sp"
            android:textColorHint="@color/black"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:hint="Sign In"
        />
    </RelativeLayout>

</RelativeLayout>
