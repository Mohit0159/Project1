<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background_gradient">

    <ImageView
        android:id="@+id/imgvdumbell"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/gym1_loho"
        />

    <TextView
        android:id="@+id/tvFitnessclub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgvdumbell"
        android:text="FITNESS CLUB"
        android:layout_marginStart="115dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/tvWelcomeback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFitnessclub"
        android:text="Welcome Back"
        android:layout_marginTop="140dp"
        android:layout_marginStart="70dp"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
    />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btsignins1"
        android:background="@drawable/button_gradientstyle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Sign In"
        android:textSize="20sp"
        android:layout_below="@+id/tvWelcomeback"
        android:textColorHint="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="65dp"
    />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnsignups1"
        android:background="@drawable/button_whitestyle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Sign Up"
        android:textSize="20sp"
        android:layout_below="@+id/btsignins1"
        android:textColorHint="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="65dp"
    />
    <TextView
        android:id="@+id/tvlwsm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login With Social Media"
        android:layout_below="@id/btnsignups1"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="75dp"
    />

    <ImageView
        android:id="@+id/ivinsta"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/tvlwsm"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/instagramicon"
    />

    <ImageView
        android:id="@+id/ivtwitter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@id/ivinsta"
        android:layout_below="@id/tvlwsm"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/twitterlogo1"/>
    <ImageView
        android:id="@+id/ivfb"
        android:layout_toRightOf="@id/ivtwitter"
        android:layout_below="@id/tvlwsm"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/fb_logo2"/>
</RelativeLayout>